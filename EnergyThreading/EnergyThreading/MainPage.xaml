<Page
    x:Class="EnergyThreading.MainPage"
    xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
    xmlns:local="using:EnergyThreading"
    xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
    xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
    mc:Ignorable="d"
    Background="{ThemeResource ApplicationPageBackgroundThemeBrush}" Width="900" Height="600">

    <Grid>
        <Button Name="multiThreadingButton" Content="Use multi thread" Margin="585,137,0,0" VerticalAlignment="Top" Height="74" Width="212" Click="Button_Click_Multithread"/>
        <Button Name="singleThreadingButton" Content="Use single thread" Margin="312,137,0,0" VerticalAlignment="Top" Height="74" Width="190" Click="Button_Click_Singlethread"/>

        <StackPanel>
            <ComboBox x:Name="houses" PlaceholderText="Select the number of houses to spawn" Margin="312,98,0,0" Height="34" Width="485" SelectionChanged="amountOfHouses_SelectionChanged">
                <x:Int32>10</x:Int32>
                <x:Int32>20</x:Int32>
                <x:Int32>30</x:Int32>
                <x:Int32>40</x:Int32>
                <x:Int32>50</x:Int32>
                <x:Int32>60</x:Int32>
                <x:Int32>70</x:Int32>
                <x:Int32>80</x:Int32>
                <x:Int32>90</x:Int32>
                <x:Int32>100</x:Int32>
            </ComboBox>
            <TextBlock Text="{x:Bind houses.SelectedIndex, Mode=OneWay}"/>
            <TextBlock Text="{x:Bind houses.SelectedItem, Mode=OneWay}"/>
        </StackPanel>
        <StackPanel>
            <TimePicker x:Name="timePicker" Header="Pick time of day" Margin="312,27,0,0" VerticalAlignment="Top" Height="71" Width="485"/>
        </StackPanel>

        <Frame x:Name="MyFrame" Height="315" Margin="62,254,338,0" VerticalAlignment="Top" Navigated="MyFrame_Navigated"/>
        <Image Source="Assets/generator.png" HorizontalAlignment="Left" Height="315" Margin="691,0,0,30" VerticalAlignment="Bottom" Width="163" UseLayoutRounding="True" FocusVisualPrimaryBrush="{x:Null}" FocusVisualSecondaryBrush="{x:Null}" />
        <TextBlock x:Name="resultBox" TextWrapping="Wrap" Text="Results:" Margin="25,28,622,550" SelectionChanged="TextBlock_SelectionChanged"/>
        <TextBlock x:Name="timeOfDayText" TextWrapping="Wrap" Text="Time of day:" Margin="25,52,795,526" SelectionChanged="TextBlock_SelectionChanged"/>
        <TextBlock x:Name="timeOfDay" TextWrapping="Wrap" Text="{Binding _timeOfDay, UpdateSourceTrigger=Default}" Margin="117,52,617,526" SelectionChanged="TextBlock_SelectionChanged" RenderTransformOrigin="0.768,0.509"/>
    </Grid>
</Page>
